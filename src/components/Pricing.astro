---
const tiers = [
  {
    name: 'Professional',
    price: '$249',
    description: 'Perfect for getting started.',
    features: [
      'Up to 20 data sources',
      'Advanced data transformation',
      'Priority support',
      'Team collaboration',
      'Custom integrations',
    ],
  },
  {
    name: 'Enterprise',
    price: 'Custom',
    description: 'For large organizations with complex data needs.',
    features: [
      'Unlimited data sources',
      'Custom data transformation',
      '24/7 support',
      'Advanced security',
      'Custom integrations',
      'Dedicated account manager',
    ],
  },
];
---

<section id="pricing" class="pricing-section">
  <div class="container">
    <h2>PRICING</h2>
    <h3>Simple, transparent pricing</h3>
    <p class="subtitle">Choose the plan that's right for you and your team.</p>

    <div class="pricing-grid">
      {tiers.map((tier) => (
        <div class="pricing-card">
          <div class="card-header">
            <h4>{tier.name}</h4>
            <div class="price">
              <span class="amount">{tier.price}</span>
              {tier.price !== 'Custom' && <span class="period">/mo</span>}
            </div>
            <p class="description">{tier.description}</p>
          </div>
          
          <div class="features">
            <h5>What's included</h5>
            <ul>
              {tier.features.map((feature) => (
                <li>
                  <svg class="check-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="card-footer">
            <button class="get-started">Get started</button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .pricing-section {
    padding: 4rem 2rem;
    background: #1a1b26;
    color: #E4D6F5;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #E4D6F5;
  }

  h3 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    line-height: 1.2;
    color: #E4D6F5;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #B3acf2;
    margin-bottom: 3rem;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .pricing-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    display: flex;
    flex-direction: column;
  }

  .card-header {
    margin-bottom: 2rem;
  }

  .card-header h4 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #E4D6F5;
    margin-bottom: 1rem;
  }

  .price {
    margin-bottom: 1rem;
  }

  .amount {
    font-size: 2.5rem;
    font-weight: 700;
    color: #E4D6F5;
  }

  .period {
    font-size: 1.1rem;
    color: #B3acf2;
    margin-left: 0.5rem;
  }

  .description {
    color: #B3acf2;
    line-height: 1.6;
  }

  .features {
    flex-grow: 1;
  }

  .features h5 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #B3acf2;
    margin-bottom: 1rem;
  }

  .features ul {
    list-style: none;
    padding: 0;
  }

  .features li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    color: #B3acf2;
  }

  .check-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #8B5CF6;
  }

  .card-footer {
    margin-top: 2rem;
  }

  .get-started {
    width: 100%;
    background: #8B5CF6;
    color: white;
    border: none;
    border-radius: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .get-started:hover {
    background: #7C3AED;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    h3 {
      font-size: 2rem;
    }

    .pricing-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 